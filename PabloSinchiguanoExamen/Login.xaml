<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PabloSinchiguanoExamen.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="5" CornerRadius="0">               
                <Label Text="LOGIN" HorizontalTextAlignment="Center" TextColor="White" FontSize="28"/>
            </Frame>
            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"
               HeightRequest="100" />
            <Label Text="Ingrese sus datos" TextColor="White" FontSize="17" Padding="10,10,30,10"
               HorizontalTextAlignment="Center" BackgroundColor="Blue"/>
            <Entry x:Name="txtUsuario"  Placeholder="Usuario " FontSize="20"/>
            <Entry x:Name="txtClave"  Placeholder="Clave " IsPassword="True" FontSize="20"/>
            <Button x:Name="btnIngresar"
                    Text="Ingresar"
                    Clicked="btnIngresar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>